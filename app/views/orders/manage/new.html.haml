%h1= t('orders.new')
= simple_form_for @order, url: orders_manage_index_path do |f|
  = f.simple_fields_for :order_items, dynamic: true do |rf|
    = rf.input :product_id, collection: Product.all
    = rf.input :count
    = rf.input :direction, collection: %w[on from]
    = rf.remove_fields_link t('orders.item.remove')
  = f.add_fields_link :order_items, t('orders.item.add'), class: 'btn btn-sm btn-primary'
  = f.submit
